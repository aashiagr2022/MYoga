<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        android:padding="1dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/Image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="140dp"
        android:padding="1dp"
        android:src="@drawable/image322x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/candara"
        android:text="Hello"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darkgreen"
        android:textSize="43sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/userName"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="45dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="14sp"
        android:autoSizeStepGranularity="10sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/candara"
        android:text="@{string/userName}"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darkgreen"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/sitkabanner"
        android:text="Let's start your fitness health challenge"
        android:textColor="@color/tan"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/level1"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:fontFamily="@font/candara"
        android:text="Week I"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:translationZ="2dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#d3d3d3"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/level2"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:fontFamily="@font/candara"
        android:text="Week II"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:translationZ="2dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#d3d3d3"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/level3"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="640dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:fontFamily="@font/candara"
        android:shadowColor="#373434"
        android:text="Week III"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:translationZ="5dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#d3d3d3"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
